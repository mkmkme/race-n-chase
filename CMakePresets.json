{
    "version": 4,
    "include": [
        "./ConanPresets.json"
    ],
    "configurePresets": [
        {
            "name": "Clang",
            "displayName": "Clang",
            "description": "Main - Clang preset with Conan generated toolchain",
            "inherits": [
                "conan-clang"
            ],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Werror"
            },
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            },
            "generator": "Ninja"
        },
        {
            "name": "Gcc",
            "displayName": "Gcc",
            "description": "Main - Gcc preset with Conan generated toolchain",
            "inherits": [
                "conan-gcc"
            ],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Werror"
            },
            "generator": "Ninja"
        },
        {
            "name": "MSVC",
            "displayName": "VS Compiler",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "description": "Main - VisualStudio preset with Conan generated toolchain",
            "inherits": [
                "conan-msvc"
            ],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_INIT": "/W4 /WX /EHsc"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Clang Debug",
            "configurePreset": "Clang",
            "configuration": "Debug"
        },
        {
            "name": "Clang Release",
            "configurePreset": "Clang",
            "configuration": "Release"
        },
        {
            "name": "Gcc Release",
            "configurePreset": "Gcc",
            "configuration": "Release"
        },
        {
            "name": "MSVC Debug",
            "configurePreset": "MSVC",
            "configuration": "Debug"
        },
        {
            "name": "MSVC Release",
            "configurePreset": "MSVC",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "Clang Debug",
            "configurePreset": "Clang",
            "configuration": "Debug"
        },
        {
            "name": "Clang Release",
            "configurePreset": "Clang",
            "configuration": "Release"
        },
        {
            "name": "MSVC Debug",
            "configurePreset": "MSVC",
            "configuration": "Debug"
        },
        {
            "name": "MSVC Release",
            "configurePreset": "MSVC",
            "configuration": "Release"
        }
    ]
}
